<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.argeo.slc.process">
	<class name="SlcExecutionStep" table="SLC_EXECUTION_STEP">
		<cache usage="nonstrict-read-write" />

		<id name="uuid" column="UUID" />
		<property name="type" column="TYPE" />
		<property name="thread" column="THREAD" />
		<property name="timestamp" column="TSTAMP" type="imm_timestamp" />

		<list name="logLines" cascade="all" lazy="false"
			table="SLC_EXECUTION_STEP_LOG_LINE">
			<cache usage="nonstrict-read-write" />
			<key column="SLC_EXECUTION_STEP_ID" />
			<list-index column="INDX" />
			<element column="LOG_LINE" type="text" />
		</list>

		<query name="stepIndex"><![CDATA[
select index(step)
 from SlcExecution process
  join process.steps step
  	with step.uuid = ?
 where process.uuid = ? 
		]]></query>
		<query name="stepsAfter"><![CDATA[
select step
 from SlcExecution process
  join process.steps step
 where process.uuid = ? 
 	and index(step) > ?
		]]></query>
	</class>
</hibernate-mapping>