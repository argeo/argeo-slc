<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="hibernateProperties">
			<value><![CDATA[
hibernate.dialect=org.hibernatespatial.postgis.PostgisDialect
hibernate.hbm2ddl.auto=create
hibernate.current_session_context_class=thread
hibernate.jdbc.batch_size=100
		]]></value>
		</property>
		<property name="mappingResources">
			<list>
				<value>org/argeo/slc/gpx/hibernate/TrackPoint.hbm.xml</value>
				<value>org/argeo/slc/gpx/hibernate/TrackSegment.hbm.xml</value>
				<value>org/argeo/slc/gpx/hibernate/TrackSpeed.hbm.xml</value>
			</list>
		</property>
	</bean>

