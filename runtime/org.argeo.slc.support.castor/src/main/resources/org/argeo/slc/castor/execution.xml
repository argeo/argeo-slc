<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
	<description>Execution objects XML mapping</description>

	<class name="org.argeo.slc.execution.ExecutionModuleDescriptor">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="name" />
		<field name="version" />
		<field name="label" />
		<field name="description" />
		<field name="executionFlows" collection="arraylist"
			type="org.argeo.slc.execution.ExecutionFlowDescriptor">
			<bind-xml auto-naming="deriveByClass" location="execution-flows" />
		</field>
		<field name="executionSpecs" collection="arraylist"
			type="org.argeo.slc.execution.ExecutionSpec">
			<bind-xml auto-naming="deriveByClass" location="execution-specs" />
		</field>
	</class>

	<class name="org.argeo.slc.execution.ExecutionFlowDescriptor">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="name" identity="true">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="path">
			<bind-xml name="path" node="attribute" />
		</field>
		<field name="executionSpec">
			<bind-xml name="executionSpec" node="attribute" reference="true" />
		</field>
		<field name="values" collection="map">
			<bind-xml name="value" location="values">
				<class name="org.exolab.castor.mapping.MapItem">
					<map-to ns-uri="http://argeo.org/projects/slc/schemas"
						ns-prefix="slc" />
					<field name="key" type="string">
						<bind-xml name="key" node="attribute" />
					</field>
					<field name="value"
						type="org.argeo.slc.core.execution.AbstractExecutionValue">
						<bind-xml auto-naming="deriveByClass" />
					</field>
				</class>
			</bind-xml>
		</field>
	</class>

	<!-- Specs -->
	<class name="org.argeo.slc.core.execution.DefaultExecutionSpec">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="name" identity="true">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="attributes" collection="map">
			<bind-xml name="value" location="values">
				<class name="org.exolab.castor.mapping.MapItem">
					<map-to ns-uri="http://argeo.org/projects/slc/schemas"
						ns-prefix="slc" />
					<field name="key" type="string">
						<bind-xml name="key" node="attribute" />
					</field>
					<field name="value"
						type="org.argeo.slc.core.execution.AbstractSpecAttribute">
						<bind-xml auto-naming="deriveByClass" />
					</field>
				</class>
			</bind-xml>
		</field>
	</class>

	<class name="org.argeo.slc.core.execution.AbstractSpecAttribute">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="isParameter">
			<bind-xml name="isParameter" node="attribute" />
		</field>
		<field name="isFrozen">
			<bind-xml name="isFrozen" node="attribute" />
		</field>
		<field name="isHidden">
			<bind-xml name="isHidden" node="attribute" />
		</field>
	</class>

	<class name="org.argeo.slc.core.execution.PrimitiveSpecAttribute"
		extends="org.argeo.slc.core.execution.AbstractSpecAttribute">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="type">
			<bind-xml name="type" node="attribute" />
		</field>
		<field name="value" type="string"
			handler="org.argeo.slc.castor.execution.PrimitiveFieldHandler">
			<bind-xml node="text" />
		</field>
	</class>

	<class name="org.argeo.slc.core.execution.RefSpecAttribute"
		extends="org.argeo.slc.core.execution.AbstractSpecAttribute">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="targetClassName">
			<bind-xml name="targetClassName" node="attribute" />
		</field>
		<field name="choices" collection="arraylist"
			type="org.argeo.slc.core.execution.RefValueChoice">
			<bind-xml auto-naming="deriveByClass" location="choices" />
		</field>
	</class>

	<!-- Values -->
	<class name="org.argeo.slc.core.execution.AbstractExecutionValue">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
	</class>

	<class name="org.argeo.slc.core.execution.PrimitiveValue"
		extends="org.argeo.slc.core.execution.AbstractExecutionValue">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="type">
			<bind-xml name="type" node="attribute" />
		</field>
		<field name="value" type="string"
			handler="org.argeo.slc.castor.execution.PrimitiveFieldHandler">
			<bind-xml node="text" />
		</field>
	</class>

	<class name="org.argeo.slc.core.execution.RefValue" extends="org.argeo.slc.core.execution.AbstractExecutionValue">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="ref">
			<bind-xml name="ref" node="attribute" />
		</field>
		<field name="type">
			<bind-xml name="type" node="attribute" />
		</field>
	</class>

	<class name="org.argeo.slc.core.execution.RefValueChoice">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="name">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="description" />
	</class>
</mapping>