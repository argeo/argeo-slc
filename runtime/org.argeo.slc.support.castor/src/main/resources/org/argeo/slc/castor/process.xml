<?xml version="1.0"?>

<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
	<description>Process objects XML mapping</description>

	<class name="org.argeo.slc.process.SlcExecution">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="uuid" identity="true">
			<bind-xml node="attribute" />
		</field>
		<field name="status" />
		<field name="type" />
		<field name="host" />
		<field name="user" />
		<field name="steps" collection="arraylist"
			type="org.argeo.slc.process.SlcExecutionStep">
			<bind-xml auto-naming="deriveByClass" location="steps" />
		</field>
		<field name="attributes" collection="map">
			<bind-xml name="attribute" location="attributes">
				<class name="org.exolab.castor.mapping.MapItem">
					<map-to ns-uri="http://argeo.org/projects/slc/schemas"
						ns-prefix="slc" />
					<field name="key" type="string">
						<bind-xml name="name" node="attribute" />
					</field>
					<field name="value" type="string">
						<bind-xml node="text" />
					</field>
				</class>
			</bind-xml>
		</field>
	</class>

	<class name="org.argeo.slc.process.SlcExecutionStep">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="uuid" identity="true">
			<bind-xml node="attribute" />
		</field>
		<field name="type" />
		<field name="begin" />
		<field name="logLines" collection="arraylist" type="string">
			<bind-xml name="log-line" location="log-lines" />
		</field>
	</class>

	<class name="org.argeo.slc.process.SlcExecutionSpec">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="executionSpecFields" collection="map">
			<bind-xml name="execution-spec-field" location="execution-spec-fields">
				<class name="org.exolab.castor.mapping.MapItem">
					<map-to ns-uri="http://argeo.org/projects/slc/schemas"
						ns-prefix="slc" />
					<field name="key" type="string">
						<bind-xml name="name" node="attribute" />
					</field>
					<field name="value" type="org.argeo.slc.process.SlcExecutionSpecField">
						<bind-xml auto-naming="deriveByClass" />
					</field>
				</class>
			</bind-xml>
		</field>
	</class>

	<class name="org.argeo.slc.process.SlcExecutionSpecField">
		<map-to ns-uri="http://argeo.org/projects/slc/schemas"
			ns-prefix="slc" />
		<field name="label" />
		<field name="type" />
		<field name="defaultValue" />
		<field name="listValues" />
	</class>

</mapping>