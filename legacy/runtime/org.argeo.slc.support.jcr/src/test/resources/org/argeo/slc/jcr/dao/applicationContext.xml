<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>

	<bean id="slcAgentDescriptorDao" class="org.argeo.slc.jcr.dao.SlcAgentDescriptorDaoJcr"
		init-method="init">
		<property name="session" ref="argeo.jcr.session.inMemory" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="slcExecutionDao" class="org.argeo.slc.jcr.dao.SlcExecutionDaoJcr"
		init-method="init">
		<property name="session" ref="argeo.jcr.session.inMemory" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="nodeMapperProvider" class="org.argeo.slc.jcr.dao.SlcNodeMapperProvider"
		init-method="init">
		<property name="defaultNodeMapper" ref="nodeMapper" />
		<property name="treeTestResultNodeMapper" ref="treeTestResultNodeMapper" />
	</bean>

	<bean id="treeTestResultDao" class="org.argeo.slc.jcr.dao.TreeTestResultDaoJcr"
		init-method="init">
		<property name="session" ref="argeo.jcr.session.inMemory" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="treeTestResultCollectionDao" class="org.argeo.slc.jcr.dao.TreeTestResultCollectionDaoJcr"
		init-method="init">
		<property name="session" ref="argeo.jcr.session.inMemory" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="nodeMapper" class="org.argeo.jcr.spring.BeanNodeMapper" />

	<bean id="treeTestResultNodeMapper" class="org.argeo.slc.jcr.dao.TreeTestResultNodeMapper">
	</bean>


	<bean id="argeo.jcr.session.inMemory" factory-bean="argeo.jcr.repository.inMemory"
		factory-method="login" destroy-method="logout">
		<constructor-arg>
			<bean class="javax.jcr.SimpleCredentials">
				<constructor-arg value="demo" />
				<constructor-arg value="demo" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="argeo.jcr.repository.inMemory" class="org.argeo.jackrabbit.JackrabbitContainer"
		init-method="init" destroy-method="destroy">
		<property name="homeDirectory"
			value="${java.io.tmpdir}/jackrabbit-slc-unit-${user.name}" />
		<property name="inMemory" value="true" />
		<property name="configuration"
			value="classpath:/org/argeo/jackrabbit/repository-inMemory.xml" />
	</bean>

</beans>