<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="classpath:/org/argeo/slc/castor/applicationContext.xml" />

	<bean name="executionBuildListener"
		class="org.argeo.slc.ant.SlcExecutionBuildListener">
		<property name="notifiers">
			<list>
				<ref bean="webServiceNotifier" />
			</list>
		</property>
	</bean>

	<bean name="fileNotifier"
		class="org.argeo.slc.core.process.FileSlcExecutionNotifier">
		<property name="basePath" value="${slc.workDir}/process" />
		<property name="marshaller" ref="marshaller" />
	</bean>

	<bean name="webServiceNotifier"
		class="org.argeo.slc.core.process.WebServiceSlcExecutionNotifier">
		<property name="template" ref="webServiceTemplate" />
	</bean>

</beans>