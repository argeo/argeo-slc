	<repositories>
		<repository>
			<id>argeo-commons</id>
			<url>http://repo.argeo.org/data/public/java/org.argeo.commons-1.2.x</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
