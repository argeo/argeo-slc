					<url>scpexe://argeo.org/var/argeo/maven2/argeo-snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
		<profile>
			<id>release</id>
			<distributionManagement>
				<site>
					<id>argeo-slc-site</id>
					<name>SLC Site</name>
					<url>file://${site.repoBase}/${version.slc}</url>
				</site>
			</distributionManagement>
		</profile>
	</profiles>

