<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="ui" class="org.argeo.slc.geotools.SimpleGisFieldViewer"
		init-method="run">
		<property name="positionProvider" ref="positionProvider" />
		<property name="jaiImageIoClassLoader">
			<bean class="org.springframework.osgi.util.BundleDelegatingClassLoader"
				factory-method="createBundleClassLoaderFor">
				<constructor-arg>
					<ref bean="jai.imageio" />
					<!--
						<bean factory-bean="bundleContext" factory-method="getBundle" />
					-->
				</constructor-arg>
			</bean>
		</property>
	</bean>
</beans>