<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>

	<bean id="slcAgentDescriptorDao" class="org.argeo.slc.jcr.dao.SlcAgentDescriptorDaoJcr"
		init-method="init">
		<property name="session" ref="jcrSession" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="testRunDescriptorDao" class="org.argeo.slc.jcr.dao.TestRunDescriptorDaoJcr"
		init-method="init">
		<property name="session" ref="jcrSession" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="slcExecutionDao" class="org.argeo.slc.jcr.dao.SlcExecutionDaoJcr"
		init-method="init">
		<property name="session" ref="jcrSession" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="nodeMapperProvider" class="org.argeo.slc.jcr.dao.SlcNodeMapperProvider"
		init-method="init">
		<property name="defaultNodeMapper" ref="nodeMapper" />
		<property name="treeTestResultNodeMapper" ref="treeTestResultNodeMapper" />
	</bean>

	<bean id="testResultDao" class="org.argeo.slc.jcr.dao.TreeTestResultDaoJcr"
		init-method="init">
		<property name="session" ref="jcrSession" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="testResultCollectionDao" class="org.argeo.slc.jcr.dao.TreeTestResultCollectionDaoJcr"
		init-method="init">
		<property name="session" ref="jcrSession" />
		<property name="nodeMapperProvider" ref="nodeMapperProvider" />
	</bean>

	<bean id="osivInterceptor"
		class="org.argeo.server.jcr.mvc.OpenSessionInViewJcrInterceptor">
		<property name="session" ref="jcrSession" />
	</bean>

	<!--  JCR node mappers -->
	<bean id="bundleClassLoader"
		class="org.springframework.osgi.util.BundleDelegatingClassLoader"
		factory-method="createBundleClassLoaderFor">
		<constructor-arg>
			<bean factory-bean="bundleContext" factory-method="getBundle" />
		</constructor-arg>
	</bean>

	<bean id="nodeMapper" class="org.argeo.jcr.BeanNodeMapper">
		<property name="classLoader" ref="bundleClassLoader" />
	</bean>

	<bean id="treeTestResultNodeMapper" class="org.argeo.slc.jcr.dao.TreeTestResultNodeMapper">
		<property name="classLoader" ref="bundleClassLoader" />
	</bean>
	<!--

		<bean id="jcrSession" factory-bean="argeo.jcr.repository.inMemory"
		factory-method="login" destroy-method="logout" scope="request">
		<constructor-arg> <bean
		class="org.argeo.server.jcr.security.SpringSecurityCredentials" />
		</constructor-arg> </bean>
	-->
	<bean id="jcrSession"
		class="org.argeo.jcr.ThreadBoundJcrSessionFactory">
		<property name="repository" ref="jcrRepository" />
	</bean>

	<bean id="jcrRepository" class="org.argeo.server.jackrabbit.JackrabbitContainer">
		<property name="homeDirectory" value="${argeo.osgi.data.dir}/jackrabbit" />
		<property name="configuration" value="osgibundle:/repository.xml" />
	</bean>

</beans>