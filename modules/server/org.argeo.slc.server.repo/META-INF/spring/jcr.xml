<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="jcrSession" class="org.argeo.security.jcr.SecureThreadBoundSession">
		<property name="repository" ref="jcrRepository" />
	</bean>

	<bean id="jcrRepository" class="org.argeo.jackrabbit.JackrabbitContainer"
		init-method="init" destroy-method="destroy">
		<property name="homeDirectory" value="${osgi.instance.area}/repos/java" />
		<property name="configuration" value="osgibundle:repository-h2.xml" />
		<property name="variables" value="osgibundle:/repo.properties" />
		<property name="cndFiles">
			<list>
				<value>/org/argeo/jcr/argeo.cnd</value>
				<value>/org/argeo/slc/jcr/slc.cnd</value>
				<value>/org/argeo/slc/repo/repo.cnd</value>
			</list>
		</property>
		<property name="bundleContext" ref="bundleContext" />
	</bean>

	<!-- Security -->
	<bean class="org.argeo.jackrabbit.JackrabbitAuthorizations"
		init-method="run">
		<property name="groupPrivileges">
			<map>
				<entry key="jcr:read" value="anonymous,ROLE_USER" />
				<entry key="jcr:all" value="ROLE_ARGEO_COMMITTER" />
			</map>
		</property>
		<property name="repository" ref="jcrRepository" />
	</bean>

</beans>