<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Manager -->
	<bean id="modulesManager" class="org.argeo.slc.osgi.OsgiExecutionModulesManager">
		<property name="slcExecutionNotifiers" ref="slcExecutionListeners" />
		<property name="bundlesManager" ref="bundlesManager" />
	</bean>

	<bean id="bundlesManager" class="org.argeo.slc.osgi.BundlesManager" />

	<!-- Logging -->
	<bean id="log4Notification" class="org.argeo.slc.log4j.SlcExecutionAppender"
		init-method="init" destroy-method="destroy">
		<property name="disabled" value="${slc.agent.log4Notification.disabled}" />
		<property name="level" value="${slc.agent.log4Notification.level}" />
		<property name="onlyExecutionThread"
			value="${slc.agent.log4Notification.onlyExecutionThread}" />
	</bean>


</beans>