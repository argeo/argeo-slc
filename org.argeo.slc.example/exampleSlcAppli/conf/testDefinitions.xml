<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="simpleExampleTestDef"
		class="org.argeo.slc.example.SimpleExampleTestDef"
		scope="prototype">
	</bean>

	<bean id="complexExampleTestDef"
		class="org.argeo.slc.core.test.tree.CompositeTreeTestDefinition "
		scope="prototype">
		<property name="tasks">
			<list>
				<ref bean="dummyTask" />
				<bean class="org.argeo.slc.example.ExampleTask">
					<property name="description"
						value="Another task (nested)" />
				</bean>
				<bean
					class="org.argeo.slc.example.SimpleExampleTestDef" />
			</list>
		</property>
	</bean>

	<bean id="dummyTask" class="org.argeo.slc.example.ExampleTask">
		<property name="description" value="A dummy task" />
	</bean>

</beans>