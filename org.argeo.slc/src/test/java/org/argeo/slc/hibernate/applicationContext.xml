<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Results -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.SingleConnectionDataSource"
		destroy-method="destroy">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:mem:test" />
		<property name="username" value="sa" />
		<property name="password" value="" />
		<property name="suppressClose" value="true" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mappingResources">
			<list>
				<value>
					org/argeo/slc/hibernate/structure/SimpleSElement.hbm.xml
				</value>
				<value>
					org/argeo/slc/hibernate/structure/tree/TreeSPath.hbm.xml
				</value>
				<value>
					org/argeo/slc/hibernate/structure/tree/TreeSRegistry.hbm.xml
				</value>
				<value>
					org/argeo/slc/hibernate/test/NumericTRId.hbm.xml
				</value>
				<value>
					org/argeo/slc/hibernate/test/SimpleResultPart.hbm.xml
				</value>
				<value>
					org/argeo/slc/hibernate/test/tree/TreeTestResult.hbm.xml
				</value>
				<value>
					org/argeo/slc/hibernate/test/tree/PartSubList.hbm.xml
				</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<value>
				hibernate.dialect=org.hibernate.dialect.HSQLDialect
				hibernate.hbm2ddl.auto=create
			</value>
		</property>
	</bean>

	<bean id="treeSPathDao"
		class="org.argeo.slc.hibernate.structure.tree.TreeSPathDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="treeSRegistryDao"
		class="org.argeo.slc.hibernate.structure.tree.TreeSRegistryDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="testResultDao"
		class="org.argeo.slc.hibernate.test.tree.TestResultDaoHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>