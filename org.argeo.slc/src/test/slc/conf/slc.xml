<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="defaultTestRun"
		class="org.argeo.slc.core.test.SimpleTestRun" scope="prototype">
		<property name="testResult" ref="testResult" />
		<property name="deployedSystem" ref="exampleDeployedSystem" />
	</bean>

	<bean id="otherTestRun"
		class="org.argeo.slc.core.test.SimpleTestRun" scope="prototype">
		<property name="testResult" ref="testResult2" />
		<property name="deployedSystem" ref="exampleDeployedSystem" />
	</bean>

	<bean id="testResult"
		class="org.argeo.slc.core.test.tree.TreeTestResult">
		<property name="numericResultId">
			<bean class="org.argeo.slc.core.test.NumericTRId">
				<property name="value" value="1" />
			</bean>
		</property>
		<property name="listeners">
			<list>
				<ref bean="resultLogger" />
				<ref bean="resultPersister" />
			</list>
		</property>
	</bean>

	<bean id="testResult2"
		class="org.argeo.slc.core.test.tree.TreeTestResult">
		<property name="numericResultId">
			<bean class="org.argeo.slc.core.test.NumericTRId">
				<property name="value" value="2" />
			</bean>
		</property>
		<property name="listeners">
			<list>
				<ref bean="resultLogger" />
				<ref bean="resultPersister" />
			</list>
		</property>
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

	<bean id="resultLogger"
		class="org.argeo.slc.core.test.tree.TreeTestResultLogger"
		init-method="init" scope="prototype">
	</bean>

	<bean id="resultPersister"
		class="org.argeo.slc.core.test.tree.TreeTestResultPersister"
		init-method="init" scope="prototype">
		<property name="testResultDao" ref="testResultDao" />
		<property name="treeSPathDao" ref="treeSPathDao" />
		<property name="treeSRegistryDao" ref="treeSRegistryDao" />
	</bean>

	<bean id="report"
		class="org.argeo.slc.core.test.tree.htmlreport.FullHtmlTreeReport">
		<property name="testResultDao" ref="testResultDao" />
		<property name="treeSRegistryDao" ref="treeSRegistryDao" />
		<property name="reportDir"
			value="${slc.workDir}/results/report" />
	</bean>

	<bean id="exampleDeployedSystem"
		class="org.argeo.slc.example.ExampleDeployedSystem">
		<property name="skipFreq" value="2" />
		<property name="deployedSystemId">
			<bean class="org.argeo.slc.core.deploy.NumericDSId">
				<property name="value" value="123456" />
				<property name="distributionId">
					<bean
						class="org.argeo.slc.core.build.VersionDistributionId">
						<property name="versionString" value="0.3.1" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="exampleDeployedSystem2"
		class="org.argeo.slc.example.ExampleDeployedSystem">
		<property name="skipFreq" value="3" />
		<property name="deployedSystemId">
			<bean class="org.argeo.slc.core.deploy.NumericDSId">
				<property name="value" value="654321" />
				<property name="distributionId">
					<bean
						class="org.argeo.slc.core.build.VersionDistributionId">
						<property name="versionString" value="0.3.1" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

</beans>