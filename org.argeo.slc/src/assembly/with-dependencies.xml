<assembly xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
	<id>with-dependencies</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeSiteDirectory>true</includeSiteDirectory>
	<fileSets>
		<fileSet>
			<directory>src/base</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.argeo.slc:argeo-slc-core</include>
				<include>org.argeo.slc:argeo-slc-example</include>
			</includes>
			<sources>
				<outputDirectoryMapping>
					src/${artifactId}
				</outputDirectoryMapping>
			</sources>
			<binaries>
				<unpack>false</unpack>
				<outputDirectory>lib</outputDirectory>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>

		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.argeo.slc:argeo-slc-example</include>
			</includes>
			<binaries>
				<unpack>true</unpack>
				<outputFileNameMapping>example</outputFileNameMapping>
				<attachmentClassifier>slc</attachmentClassifier>
				<outputDirectory></outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.argeo.slc:argeo-slc-core</include>
				<include>org.argeo.slc:argeo-slc-example</include>
			</includes>
			<binaries>
				<unpack>true</unpack>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<outputFileNameMapping>${artifactId}</outputFileNameMapping>
				<outputDirectory>javadoc</outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.argeo.slc:argeo-slc-core</include>
				<include>org.argeo.slc:argeo-slc-example</include>
			</includes>
			<binaries>
				<unpack>true</unpack>
				<attachmentClassifier>site</attachmentClassifier>
				<outputFileNameMapping>${artifactId}</outputFileNameMapping>
				<outputDirectory>site</outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>

	</moduleSets>
</assembly>