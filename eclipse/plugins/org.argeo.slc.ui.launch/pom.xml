			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>pde-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<eclipseInstall>${eclipse.base}</eclipseInstall>
					<antVerbose>false</antVerbose>
					<antDebug>false</antDebug>
					<buildProperties>
